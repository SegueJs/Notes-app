<div class="row">
  {{#each notes}}
    <div class="col-md-4 mt-3">
      <div class="card p-1">
        <div class="card-body">
          <h4 class="card-title d-flex justify-content-between align-items-center">
            {{this.title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
          </h4>
          <p>{{this.description}}</p>
          <form action="/notes/delete/{{_id}}?_method=DELETE" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn btn-danger w-100 btn-sm" type="submit" >
              Delete
            </button>
          </form>
        </div>
      </div>
    </div>
    {{else}}
      <div class="card col-md-5 mx-auto">
        <div class="card-body">
          <p class="lead">You would create a New Note</p>
            <a href="/notes/add" class="btn btn-primary w-100">Create One!</a>
        </div>
      </div>
  {{/each}}
</div>